{
  "name": "dif-web3-wallet-extension",
  "version": "0.0.1",
  "author": "Nautilus Studios",
  "license": "ISC",
  "description": "DIF Hackathon WEB3 and SSI Credential Wallet",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "vite serve",
    "build": "tsc && vite build",
    "start:webext": "web-ext run --source-dir ./dist",
    "start_wp": "webpack serve --port 3000",
    "build_wp": "set NODE_ENV=production && webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage .",
    "test:debug": "jest --inspect-brk --runInBand --no-cache"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.1",
    "@sphereon/pex": "^2.2.2",
    "@veramo-community/veramo-react": "^1.6.6",
    "@veramo/credential-w3c": "^5.5.3",
    "@veramo/data-store": "^5.5.3",
    "@veramo/did-manager": "^5.5.3",
    "@veramo/did-provider-ethr": "^5.5.3",
    "@veramo/did-provider-key": "^5.5.3",
    "@veramo/did-resolver": "^5.5.3",
    "@veramo/key-manager": "^5.5.3",
    "@veramo/kms-local": "^5.5.3",
    "@veramo/kms-web3": "^5.5.3",
    "@veramo/message-handler": "^5.5.3",
    "@veramo/selective-disclosure": "^5.5.3",
    "@veramo/utils": "^5.5.3",
    "@vitejs/plugin-react": "^4.2.1",
    "browserslist-to-esbuild": "^1.2.0",
    "ethers": "^6.7.1",
    "formik": "^2.4.5",
    "localforage": "^1.10.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.16.0",
    "reflect-metadata": "^0.1.14",
    "sql.js": "^1.9.0",
    "usehooks-ts": "^2.9.1",
    "vite": "^5.0.7",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@types/jest": "^29.5.10",
    "@types/localforage": "^0.0.34",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.4",
    "dotenv": "^16.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "DIF",
    "SSI",
    "WEB3",
    "DID",
    "VC",
    "VP"
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jest-environment-jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "modulePaths": [
      "<rootDir>/src"
    ]
  }
}
